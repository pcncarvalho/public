<div class="modal fade" id="modal-alterar-beneficiario" tabindex="-1" role="dialog"
     aria-labelledby="myModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-alterar-beneficiario modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal">
                    <span aria-hidden="true">&times;</span>
                    <span class="sr-only">Close</span>
                </button>
                <h4 class="modal-title" id="myModalLabel">
                    Alterar beneficiário
                </h4>
            </div>
            <div class="modal-body">
                <form id="formAlterarBeneficiario" method="post">
                    <div class="row">
                        <input type="hidden" id="Id" name="Id" />
                        <input type="hidden" id="IdCliente" name="IdCliente" />
                        <div class="col-xs-4 vertical-center">
                            <div class="form-group">
                                <label for="CPF">CPF:</label>
                                <input required="required" type="text" class="form-control" id="CPF" name="CPF" placeholder="Ex.: 010.011.111-00" maxlength="11">
                            </div>
                        </div>
                        <div class="col-xs-6 vertical-center">
                            <div class="form-group">
                                <label for="Nome">Nome:</label>
                                <input required="required" type="text" class="form-control" id="Nome" name="Nome" placeholder="Ex.: Maria" maxlength="50">
                            </div>
                        </div>
                        <div class="col-xs-2 vertical-center">
                            <div class="form-group">
                                <button type="button" class="btn btn-sm btn-success form-control" onclick="AlterarBeneficiario();">Alterar</button>
                            </div>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>